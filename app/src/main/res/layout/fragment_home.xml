<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="prabhu.company.echo18beta.HomeFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Know your live signal strength"
        android:textColor="#FFFFFF"
        android:textSize="16sp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/topline" />

    <pl.droidsonroids.gif.GifTextView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="-80dp"
        android:background="@drawable/meters" />

    <com.mikhaellopez.circularfillableloaders.CircularFillableLoaders
        android:id="@+id/circularFillableLoaders"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginRight="-2dp"
        android:layout_marginTop="-225dp"
        android:src="@drawable/warning"
        app:cfl_border="true"
        app:cfl_border_width="4dp"
        app:cfl_wave_amplitude="0.06"
        app:cfl_wave_color="#20C20E" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_gravity="right"
        android:layout_marginTop="-57dp"
        android:src="@drawable/downline" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="left"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="-140dp"
        android:src="@drawable/hexa" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="right"
        android:layout_marginRight="9dp"
        android:layout_marginTop="-390dp"
        android:src="@drawable/hexa" />


    <TextView
        android:id="@+id/carrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-100dp"
        android:text="Carrier"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:elevation="10dp"
        android:text="NG"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="right"
        android:layout_marginRight="-17dp"
        android:layout_marginTop="-20dp"
        android:src="@drawable/type" />

    <ImageView
        android:id="@+id/symbol"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="255dp"
        android:src="@drawable/correct" />

    <TextView
        android:id="@+id/feedback"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:text="GOOD"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/dbm"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="-25dp"
        android:text="DBM : "
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/asu"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:text="ASU : "
        android:textColor="#FFFFFF" />

    <!--<Button
        android:id="@+id/popup"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="right"
        android:layout_marginTop="-520dp"
        android:background="@drawable/ic_more_vert_black_24dp" />-->
</LinearLayout>