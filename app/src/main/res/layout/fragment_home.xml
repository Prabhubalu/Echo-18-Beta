<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="#000000"
    tools:context="prabhu.company.echo18beta.HomeFragment">

    <TextView
        android:text="Home"
        android:textSize="40sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-light"
        android:text="Make yourself home :)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/topline" />

    <pl.droidsonroids.gif.GifTextView
        android:layout_marginTop="-80dp"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="@drawable/meters"
        />

    <com.mikhaellopez.circularfillableloaders.CircularFillableLoaders
        android:id="@+id/circularFillableLoaders"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="-225dp"
        android:layout_marginRight="-2dp"
        android:src="@drawable/tower"
        app:cfl_border="true"
        app:cfl_border_width="4dp"
        app:cfl_progress="80"
        app:cfl_wave_amplitude="0.06"
        app:cfl_wave_color="#20C20E" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/downline"
        android:layout_gravity="right"
        android:layout_marginTop="-57dp"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/hexa"
        android:layout_gravity="left"
        android:layout_marginTop="-140dp"
        android:layout_marginLeft="9dp"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/hexa"
        android:layout_gravity="right"
        android:layout_marginTop="-390dp"
        android:layout_marginRight="9dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carrier"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="-100dp"
        android:layout_marginLeft="20dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:elevation="10dp"
        android:text="NG"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:src="@drawable/type"
        android:layout_gravity="right"
        android:layout_marginRight="-17dp"
        android:layout_marginTop="-20dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/correct"
        android:layout_marginTop="255dp"
        android:layout_marginLeft="45dp"
        />

    <TextView
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:text="GOOD"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"/>



</LinearLayout>
